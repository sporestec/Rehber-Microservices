@*Model For add And Edit model*@
<div class="modal fade" id="addUnitModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Yeni Birim</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="form">
                    <div class="form-group">
                        <label>Birim Adı</label>
                        <input type="text" class="form-control" id="inputUnitName" placeholder="Birim Adı yazınız">
                    </div>
                    <div class="form-group">
                        <label>Hangi birim altında olacak</label>
                        <input style="color:black" id="selectedParentUnit" type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <div id='contentHierarchicalUnit2'>

                            <div id='jqxWidget2'>

                            </div>
                        </div>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="checkUnit">
                        <label class="form-check-label" for="exampleCheck1">Bağımsız bir birim ekle</label>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button id="submitAddUnit" type="button" class="btn btn-success">Ekle</button>
            </div>
        </div>
    </div>
</div>


@*Model For Delete model*@

